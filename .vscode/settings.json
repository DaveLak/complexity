{
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "workbench.editor.customLabels.patterns": {
    "**/src/**": "${filename} - ${dirname}"
  },
  "workbench.editor.labelFormat": "medium",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/build/**/*": true,
    "**/package/**/*": true
  },
  "tailwindCSS.experimental.classRegex": [
    ["addClass\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["toggleClass\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ]
}
